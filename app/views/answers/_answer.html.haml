- content_tag_for :div, answer do
  %ul
    %li
      %strong Problem:
      =h answer.problem
    %li
      %strong User:
      =h answer.user
    %li
      %strong Description:
      =h answer.description
    = link_to '閲覧', answer
    = link_to '編集', edit_answer_path(answer)
    = link_to '削除', answer, :confirm => '本当に削除してよろしいですか？', :method => :delete
