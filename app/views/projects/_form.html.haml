.section.post
  - form_for(project) do |f|
    = f.error_messages
    %div.section
      = f.label :name
      %br
      = f.text_field :name
    %div.section
      = f.label :description
      %br
      = f.text_area :description, :size => '60x5'
    %div.section
      = f.label :website_url
      %br
      = f.text_field :website_url, :size => 60
    %div.section
      = f.label :repository_path
      %br
      = f.text_field :repository_path, :size => 60
    %div.section
      = f.submit '送信'
