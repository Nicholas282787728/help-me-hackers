%h2.title ダッシュボード
%ul.sort
  %li.show= link_to 'プロフィールを見る', user_path(@user), :class => 'button'
  %li.edit= link_to 'アカウント情報を編集する', edit_account_path, :class => 'button'
  %li.delete= link_to '会員情報を削除する', account_path, :confirm => '本当に退会してよろしいですか？', :method => :delete, :class => 'button'

.content.tasks_list
  %h3 タスク
  - if @user.tasks.count.zero?
    %p.empty= t('label.nothing_posted_tasks')
  - else
    %ul.tasks
      = render :partial => 'tasks/object_small', :collection => @user.tasks
