%h3 実績
%dl
  %dt.icon アイコン画像
  %dd.icon=link_to image_tag(user.profile_image_url), user_path(user)
  %dt.profile ユーザー情報
  %dd.profile=link_to user.login, user_path(user)
  - if user.state
    %dt.state 出身
    %dd.state= t("label.state.#{user.state.name}")
  %dt.favorite_language 好きなプログラム言語
  %dd.favorite_language
    - if user.language
      = link_to t("label.language.#{user.language.name}"), users_by_language_path(:language => user.language.name)
    - else
      %span.unselected 未選択
  %dt.solved 解決問題数
  %dd.solved= user.hacks.correct.size
  %dt.problem 問題出題数
  %dd.problem= user.problems.size
  %dt.bounty 合計獲得金額
  %dd.bounty
    %span= number_to_currency user.prize
  %dt.thanks 合計支払い金額
  %dd.thanks
    %span= number_to_currency  0
