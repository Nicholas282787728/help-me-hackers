.section
  %h3 人気の言語
  %ul.languages.count_by_language
    - User.count_by_language.each do |language|
      %li.language
        =link_to "#{t("label.language.#{language.name}")} (#{language.cnt})", users_by_language_path(:language => language.name)
  .to_archive
.section
  %h3 出身都道府県別ユーザー数
  %ul.states.count_by_state
    - User.count_by_state.each do |state|
      %li.state
        =link_to "#{t("label.state.#{state.name}")} (#{state.cnt})", users_by_state_path(:state => state.name)
  .to_archive
