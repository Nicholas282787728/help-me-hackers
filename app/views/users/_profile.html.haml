.user.performance
  %h3 実績
  %dl
    %dt.icon アイコン画像
    %dd.icon=link_to image_tag(user.profile_image_url), user_path(user)
    %dt.twitter_account Twitterアカウント
    %dd.twitter_account machida
    %dt.solved 解決問題数
    %dd.solved 0
    %dt.problem 問題出題数
    %dd.problem 1
    %dt.bounty 合計獲得金額
    %dd.bounty
      %span 0円
    %dt.thanks 合計支払い金額
    %dd.thanks
      %span 0円



.profile
  %h3 プロフィール
  - if user.description
    %h4.description 詳細
    %p.description=hbr user.description
  %dl.user
    - if user.state
      %dt.state 出身
      %dd.state= t("label.state.#{user.state.name}")
    - if user.url
      %dt.url URL
      %dd.url=link_to h(user.url), h(user.url), :target => '_blank'
    - if user.company
      %dt.company 会社
      %dd.company=h user.company
    - if user.language
      %dt.favorite_language 好きなプログラム言語
      %dd.favorite_language= t("label.language.#{user.language.name}")
    - if user.github_account
      %dt.github_account Githubアカウント
      %dd.github_account=link_to github_url(user.github_account), github_url(user.github_account), :target => '_blank'
  - if user.ssh_public_key
    .ssh_public_key
      %h4.ssh_public_key SSH Public Key
      %p.ssh_public_key=h user.ssh_public_key
