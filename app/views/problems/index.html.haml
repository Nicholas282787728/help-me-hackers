- title "#{problems_title} | #{t('application.title')}"
.title
  %h2= problems_title
- if params[:category]
  .by_category= t("label.category.#{@category.name}")
- if params[:tag]
  .by_tag= @tag.name
%div{:class => problems_class}
  - if @problems.empty?
    .empty
      %p 該当するHackがありません。
      %p== 今なら目立つ！この隙に#{link_to '依頼', new_problem_path}すれば解決してもらえるかも！
  - else
  %ul.problems
    = render :partial => 'object', :collection => @problems
  = will_paginate(@problems)
